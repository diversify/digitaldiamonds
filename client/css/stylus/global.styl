@import url('http://fonts.googleapis.com/css?family=Raleway:400,700');

* {
	margin: 0;
	padding: 0;
	box-sizing: border-box;
}

html, body {
	min-height: 100%;
	font-family: sans-serif;
	color: #222;
	font-size: 15px;
}
body {
	background: url(../imgs/bg.jpg) center center no-repeat fixed;
	background-size: cover;
}

h1,h2,h3,h4,h5,h6 {
	font-weight: normal;
	font-family: 'Raleway', sans-serif;
}

.wrapper {
	width: 800px;
	margin: 0 auto;
	padding: 1rem;
}