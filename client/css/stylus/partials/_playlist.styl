.playlist {
	margin: 2rem 0;

	h2 {

	}

	ul {
		list-style: none;
	}

	li {
		overflow: hidden;
		margin: 0 0 1rem 0;
		padding: 0.5rem;
		border-bottom: 1px solid #AAA;
		line-height: 2.2rem;
	}
	li:last-child {
		border: none;
	}

	span.adder {
		display: block;
		float: right;
		font-size: 0.9rem;
		line-height: 1.0rem;

		time {
			display: block;
			font-size: 0.7rem;
		}
	}
}